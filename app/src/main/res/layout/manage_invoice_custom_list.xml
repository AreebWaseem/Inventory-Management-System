<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_rounded"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/number_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Products"
        android:textAlignment="center"
        android:textColor="@color/greyishBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:background="@color/greyishBlack"
        app:layout_constraintBottom_toBottomOf="@+id/number_list_view"
        app:layout_constraintLeft_toRightOf="@+id/number_list_view"
        app:layout_constraintTop_toTopOf="@+id/number_list_view" />

    <TextView
        android:id="@+id/name_list_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:textColor="@color/greyishBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_list_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        android:textColor="@color/greyishBlack"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/name_list_view_text" />
    <View
        android:id="@+id/small_view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/product_list_view_text"
        app:layout_constraintBottom_toBottomOf="@+id/product_list_view_text"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:background="@color/greyishBlack"
        app:layout_constraintLeft_toRightOf="@+id/product_list_view_text" />

    <TextView
        android:id="@+id/cost_list_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Status"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/amber_900"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/small_view"
        app:layout_constraintLeft_toRightOf="@+id/small_view"
        app:layout_constraintTop_toTopOf="@id/small_view" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:tint="@color/greyishBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_keyboard_arrow_right_white_24dp" />

</android.support.constraint.ConstraintLayout>