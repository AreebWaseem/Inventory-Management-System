<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_rounded"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/custom_requested_product_total_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Products"
        android:textAlignment="center"
        android:textColor="@color/greyishBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:background="@color/greyishBlack"
        app:layout_constraintBottom_toBottomOf="@+id/custom_requested_product_total_number"
        app:layout_constraintLeft_toRightOf="@+id/custom_requested_product_total_number"
        app:layout_constraintTop_toTopOf="@+id/custom_requested_product_total_number" />

    <TextView
        android:id="@+id/custom_requested_product_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:includeFontPadding="false"
        android:textColor="@color/greyishBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custom_request_product_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        android:textColor="@color/greyishBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/custom_requested_product_order_number" />
    <View
        android:id="@+id/small_view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/custom_request_product_order_date"
        app:layout_constraintBottom_toBottomOf="@+id/custom_request_product_order_date"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:background="@color/greyishBlack"
        app:layout_constraintLeft_toRightOf="@+id/custom_request_product_order_date" />

    <TextView
        android:id="@+id/custom_request_product_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Status"
        android:textColor="@color/amber_900"
        app:layout_constraintBottom_toBottomOf="@+id/custom_request_product_order_date"
        app:layout_constraintLeft_toRightOf="@+id/small_view"
        app:layout_constraintTop_toTopOf="@id/custom_request_product_order_date" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:tint="@color/greyishBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_keyboard_arrow_right_white_24dp" />

    <TextView
        android:id="@+id/textView2_custom_searchable_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView7_request_product_search_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:visibility="invisible"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
       />
</android.support.constraint.ConstraintLayout>