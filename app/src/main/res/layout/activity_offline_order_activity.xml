<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mDrawerLayout_offline_order"
    tools:context="com.example.areebwaseem.mdevinventorymanagementv02.Order_activity_final">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_offline_order_drawer"
            >
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragmentContainer_offline_order"
                >

            </android.support.v4.view.ViewPager>

        </RelativeLayout>




        <View
            android:id="@+id/view_offline_order_drawer"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyishBlack"
            android:layout_above="@+id/navigationBottom_offline_order"
            />


        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigationBottom_offline_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/greyishBlack"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@color/white"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/offline_order_main_menu" />


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
