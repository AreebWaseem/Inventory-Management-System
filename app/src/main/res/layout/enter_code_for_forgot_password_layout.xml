<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyishBlack">


    <LinearLayout
        android:id="@+id/linearLayout5.0"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/enter_code_email_forgot_password_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_text_edit"
            android:ems="10"
            android:hint="@string/code_string"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/greyishBlack" />

        <Button
            android:id="@+id/enter_code_forgot_password_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/buttons_rounded_corners"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/validate_string"
            android:textColor="@color/white" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/forgot_password_enter_code_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:max="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5.0" />
</android.support.constraint.ConstraintLayout>